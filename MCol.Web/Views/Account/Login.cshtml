@{
    ViewData["Title"] = "Login";
    Layout = null; // No utilizar layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - MCol.Web</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/custom.css">
    <link href="~/lib/fontawesome/css/fontawesome.css" rel="stylesheet" />
    <script src="~/lib/fontawesome/js/fontawesome.js"></script>
</head>
<body>
    <div class="div-imagen" style="background-image:url('/images/login_1.png');background-size: cover;
           background-position: top;
           background-repeat :no-repeat;">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="row w-100">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow-lg">
                    <div class="card-header bg-dark text-white text-center">
                        <h3>Login</h3>
                    </div>
                    <div class="card-body">
                            <form id="loginForm" method="post" data-login-url="@Url.Action("Login", "Account")">
                            <div class="mb-3">
                                <label for="Username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="Username" name="Username" placeholder="Ingrese usuario" required>
                            </div>
                            <div class="mb-3">
                                <label for="Password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="Password" name="Password" placeholder="Ingrese contraseña" required>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-dark btn-block">Login</button>
                            </div>
                        </form>
                            <div id="errorMessage" class="alert alert-danger text-center mt-3 d-none"></div>

                    </div>
                    <div class="card-footer text-center">
                        <a href="#" class="text-muted">Forgot your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>
