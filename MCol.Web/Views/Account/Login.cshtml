@using MCol.DTO.Security;
@model UserLoginDto

@{
    ViewData["Title"] = "Login";
    Layout = null; // No utilizar layout
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Login</h2>

        <form method="post">
            <div class="form-group">
                <label for="Username">Usuario:</label>
                <input type="text" id="Username" name="Username" value="@Model.Username" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Password">Contraseña:</label>
                <input type="password" id="Password" name="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @ViewData.ModelState.Values.SelectMany(v => v.Errors).FirstOrDefault()?.ErrorMessage
            </div>
        }
    </div>
</div>
